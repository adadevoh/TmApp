if message.type == "error"
  .ui.negative.transition.message.center.aligned.segment
    i.close.icon
    p #{message.value}

if message.type == "success"
  .ui.success.transition.message.center.aligned.segment
    i.close.icon
    p #{message.value}

if message.type == "info"
  .ui.info.transition.message.center.aligned.segment
    i.close.icon
    p #{message.value}
