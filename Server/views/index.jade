extends layout

block content
  .ui.segment
    .ui.top.attached.tabular.menu
      a.item.active(data-tab="Fixes")
        h2 Fixes
      a.item(data-tab="Bugs")
        h2 Bugs
    .ui.bottom.attached.tab.segment.active(data-tab="Fixes")
      if fixCount == 0 
        p No fixes in your queue
        .ui.clearing.divider
        button.ui.blue.basic.button#addFix Add Fix
      else
        //p #{fixCount} Fixes
        include ./partials/index/fixList
      include ./partials/index/addFixModal

      //.ui.clearing.divider
      //button.ui.primary.basic.button Add Fix
    .ui.bottom.attached.tab.segment(data-tab="Bugs")
      p sorry no bugs
      .ui.clearing.divider
      button.ui.red.basic.button Add Bug
  .ui.segment
    h2 Items
    .ui.three.column.grid
      .column
        h4 To Dos
        unless toDos
          p Nothing in To Do list
          //-
            .ui.vertical.divider
      
      .column
        h4 Notes
        //-
          .ui.vertical.divider

      .column
        h4 Reminders