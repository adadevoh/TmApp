form.ui.form.small.modal(method="post" action="/fix/add" id="createFixModal")
  .header Add Fix
  .content
    .ui
      .fields
        .three.wide.field
          label Fix Number
          input#fixNumber(type="text" name="fixNumber" placeholder="Fix Number")
        .six.wide.field
          label Title
          input#fixTitle(type="text" name="title" placeholder="Title")
        .three.wide.field
          label Select Sprint
          select.ui.fluid.floating.dropdown.button(name="sprint" id="sprint-selection")
            option(value="") Sprint
            option(value="Sprint1") Sprint 1
            option(value="Sprint2") Sprint 2
            option(value="Sprint3") Sprint 3
      .fields
        .six.wide.field
          label Environment
          textarea#fixEnvironment(rows="2" name="environment")
        .three.wide.field
          label WHQL
          .field
            .ui.radio.checkbox
                input(type="radio" name="whql" value=1)
                label Yes
            .ui.radio.checkbox
                input(type="radio" name="whql" value=0)
                label No
        .three.wide.field
          label Create OnteTest LineItem
          .ui.fitted.checkbox
            input(type="checkbox" name="addOneTestLineItem")
            label
        .three.wide.field
          label Select Project
          select.ui.fluid.floating.dropdown.button(name="project" id="project-selection")
            option(value="") Projects
            option(value="LTSR 7.6 CU1") LTSR 7.6 CU1
            option(value="LTSR 7.6 CU2") LTSR 7.6 CU2
            option(value="LTSR 7.6 CU3") LTSR 7.6 CU3
      input(type="hidden" name="owner", value="#{user}")
  .actions
    .ui.negative.deny.button Cancel
    .ui.blue.right.labeled.icon.submit.button Submit
      i.checkmark.icon
      